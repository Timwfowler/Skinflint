<section class="user-heading"><div class="user-heading__title user-heading__title--border"><h1>Update account</h1></div></section>

<section class="register"><div class="form__invalid-warning"><h3>Please <div class="form__invalid-warning__login"><button type="button" class="js-login-btn">
        log in
    </button> <!----></div> or <div class="form__invalid-warning__register"><button class="js-register-btn" type="button">
        register
    </button> <!----></div> an account.</h3></div> <!----></section>

        <div class="contact-modal login-modal">
          <div class="contact-modal-wrap">    
            <div class="contact-modal__inner">
              <button type="button" aria-label="Close" class="btn-close"></button>    
              <div class="footer__contact">  
                <div class="footer__subscribe rte rte--nomargin">
                  <h3>Login to your account</h3>
                </div>         
                {%- form 'customer_login' -%}
                  <input type="hidden" name="return_to" value="/cart">
                  {{ form.errors | default_errors }}              
                  <input type="email" placeholder="Email" name="customer[email]" id="CustomerEmail" class="input-full{% if form.errors contains 'email' %} error{% endif %}" autocorrect="off" autocapitalize="off" autofocus>
                  {%- if form.password_needed -%}
                    <div class="grid">    
                    </div>
                    <input type="password" placeholder="Password" value="" name="customer[password]" id="CustomerPassword" class="input-full{% if form.errors contains 'password' %} error{% endif %}">
                  {%- endif -%}
                  <div class="login-btn-wrap">
                    <button type="submit" class="btn btn--full">
                      {{ 'customer.login.sign_in' | t }}
                    </button>

                    <div class="forgot-account">
                      <small class="label-info">
                        <a href="#recover" id="RecoverPassword">
                          {{ 'customer.login.forgot_password' | t }}
                        </a>
                      </small>
                    </div>
                  </div>
                  <div class="btn-secondary modal__prompt js-register-btn">                  
                    Don't have an account? Create One!                  
                  </div>        
                {%- endform -%}
              </div>
            </div>
        </div>
      </div>

      <div class="contact-modal register-modal">
        <div class="contact-modal-wrap">    
          <div class="contact-modal__inner">
            <button type="button" aria-label="Close" class="btn-close"></button>    
            <div class="footer__contact">  
              <div class="footer__subscribe rte rte--nomargin">
                <h3>Register a new account</h3>
              </div>   
              
              
              <div class="form-vertical">
                {%- form 'create_customer' -%}
            
                  {{ form.errors | default_errors }}
            
                  
                  <input type="text" placeholder="First name" name="customer[first_name]" id="FirstName" class="input-full"{% if form.first_name %} value="{{ form.first_name }}"{% endif %} autocapitalize="words" autofocus>
            
                  
                  <input type="text" placeholder="Surname" name="customer[last_name]" id="LastName" class="input-full"{% if form.last_name %} value="{{ form.last_name }}"{% endif %} autocapitalize="words">
            
                  
                  <input type="email" placeholder="Email" name="customer[email]" id="Email" class="input-full{% if form.errors contains 'email' %} error{% endif %}"{% if form.email %} value="{{ form.email }}"{% endif %} autocorrect="off" autocapitalize="off">
            
                  
                  <input type="password" placeholder="Password" name="customer[password]" id="CreatePassword" class="input-full{% if form.errors contains 'password' %} error{% endif %}">
            
                  <p>
                    <label for="register-submit" class="hidden-label">{{ 'customer.register.submit' | t }}</label>
                    <input type="submit" id="register-submit" value="{{ 'customer.register.submit' | t }}" class="btn btn--full">
                  </p>
            
                {%- endform -%}

                <button class="btn-secondary modal__prompt js-login-btn">                  
                    Already have an account? Login now!                       
                  </button>      
              </div>


            </div>
          </div>
      </div>
    </div>
  
      <script>
        //open modal
        const contactFormSh = document.querySelector('.login-modal')
        const closeButtonContact = document.querySelector('.login-modal .btn-close')
        const contactButtons = document.querySelectorAll('.js-login-btn')

        const contactFormReg = document.querySelector('.register-modal')
        const closeButtonContactReg = document.querySelector('.register-modal .btn-close')
        const contactButtonsReg = document.querySelectorAll('.js-register-btn')
  
        contactButtons.forEach((button) => {
          button.addEventListener('click', () => {
            contactFormSh.classList.add('active')
            contactFormReg.classList.remove('active')
          })
        })
  
        closeButtonContact.addEventListener('click', () => {
          contactFormSh.classList.remove('active')
        })




  
        contactButtonsReg.forEach((button) => {
          button.addEventListener('click', () => {
            contactFormReg.classList.add('active')
            contactFormSh.classList.remove('active')
          })
        })
  
        closeButtonContactReg.addEventListener('click', () => {
          contactFormReg.classList.remove('active')
        })




      </script>






