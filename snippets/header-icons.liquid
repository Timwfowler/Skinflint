{%- liquid
  assign hide_icon_labels = true
  if nav_position == 'below'
    assign hide_icon_labels = false
  endif
-%}

<div class="site-nav">
  <div class="site-nav__icons">
    <div class="site-header__search-container">
      <div class="page-width">
        <div class="site-header__search">
          {%- render 'header-search', desktop: true -%}
          <button type="button" class="text-link site-header__search-btn site-header__search-btn--cancel">
            <span class="medium-up--hide"><svg aria-hidden="true" focusable="false" role="presentation" class="icon icon-close" viewBox="0 0 64 64"><defs><style>.cls-1{fill:none;stroke:#000;stroke-miterlimit:10;stroke-width:2px}</style></defs><path class="cls-1" d="M19 17.61l27.12 27.13m0-27.13L19 44.74"/></svg></span>
            <span class="small--hide">{{ 'general.search.cancel' | t }}</span>
          </button>
        </div>
      </div>
    </div>
    <a href="{{ routes.search_url }}" class="site-nav__search site-nav__link btn btn--icon site-nav__link--icon js-search-header{% if nav_position == 'below' %} medium-up--hide{% endif %} js-no-transition">
      <svg xmlns="http://www.w3.org/2000/svg" width="21.8" height="21.8" viewBox="0 0 21.8 21.8" role="img" aria-label="Search" class="header__icon"><path d="M886.9,156.5l-5.8-5.8a9,9,0,1,1,1.5-1.5l5.8,5.8Zm-11.3-6.1a6.8,6.8,0,1,0-4.8-2A6.7,6.7,0,0,0,875.7,150.5Z" transform="translate(-866.7 -134.8)"></path></svg>
      <span class="icon__fallback-text">{{ 'general.search.title' | t }}</span>
    </a>

    {%- if shop.customer_accounts_enabled -%}
      <a class="site-nav__account site-nav__link site-nav__link--icon btn btn--icon " href="{{ routes.account_url }}">
        <svg xmlns="http://www.w3.org/2000/svg" width="20.2" height="21.8" viewBox="0 0 20.2 21.8" role="img" aria-label="Account" class="header__icon"><path d="M943.3,156.3l.2-2c.4-4,3.9-6.2,9.9-6.2s9.5,2.2,9.9,6.2l.2,2h-1.9l-.2-1.8c-.4-3.6-4.5-4.4-8-4.4s-7.6.8-8,4.4l-.2,1.8Zm4.6-16.3a5.4,5.4,0,1,1,10.9,0c0,3.7-2.3,6.5-5.4,6.5S947.9,143.8,947.9,140.1Zm1.9,0c0,2.7,1.5,4.7,3.5,4.7s3.5-2,3.5-4.7a3.5,3.5,0,1,0-7.1,0Z" transform="translate(-943.3 -134.6)"></path></svg>
        <span class="site-nav__icon-label small--hide{% if hide_icon_labels %} icon__fallback-text{% endif %}">
          {{ 'layout.customer.account' | t }}
        </span>
      </a>
    {%- endif -%}

    <a href="https://skin-flint.myshopify.com/pages/wishlist" class="site-nav__wishlist site-nav__link site-nav__link--icon btn btn--icon">
      <svg xmlns="http://www.w3.org/2000/svg" width="22.4" height="21.8" viewBox="0 0 22.4 21.8" role="img" aria-label="Favourite" class="header__icon"><path d="M237.4,258l-7.6,7.9-.8.9-.8-.9-7.6-7.9a8.8,8.8,0,0,1-2.8-6.7,6.4,6.4,0,0,1,6.5-6.3,5.4,5.4,0,0,1,4.7,2.2,5.4,5.4,0,0,1,4.7-2.2,6.4,6.4,0,0,1,6.5,6.3A8.8,8.8,0,0,1,237.4,258Zm.5-6.6a4.5,4.5,0,0,0-1.5-3.2,4.5,4.5,0,0,0-2.8-1,3.4,3.4,0,0,0-3.5,3.2,1,1,0,0,1-1.1.9,1.1,1.1,0,0,1-1.2-.9,3.4,3.4,0,0,0-3.5-3.1,4.5,4.5,0,0,0-2.8,1,4.5,4.5,0,0,0-1.5,3.2,6.6,6.6,0,0,0,2.2,5l6.8,7.1,6.8-7.1A6.6,6.6,0,0,0,238,251.4Z" transform="translate(-217.8 -245)"></path></svg>
      <span class="js-wish-count"></span>
    </a>


    <a href="{{ routes.cart_url }}"
      id="HeaderCartTrigger"
      aria-controls="HeaderCart"
      class="site-nav__cart site-nav__link site-nav__link--icon js-no-transition btn btn--icon"
      data-icon="{{ settings.cart_icon }}"
      aria-label="{{ 'layout.cart.title' | t }}"
    >
      <span class="cart-link">
        <svg xmlns="http://www.w3.org/2000/svg" width="22.1" height="21.8" viewBox="0 0 22.1 21.8" role="img" aria-label="Cart" class="header__icon"><path d="M926.6,136.8v1c0,.2-.4,5.2-.6,6.3a3.6,3.6,0,0,1-3.3,2.9l-9.2,1.1v-1.9l9-1.1a1.7,1.7,0,0,0,1.7-1.3c.1-.7.3-3.2.5-5.1H911.2v9.7a1.1,1.1,0,0,0,1.2,1.1h12.6v1.9H912.4a3,3,0,0,1-3.1-3V137.8a1.4,1.4,0,0,0-1.4-1.3h-3.5v-1.9h3.5a3.3,3.3,0,0,1,3.1,2.3Zm-13.5,17.6a1.9,1.9,0,1,1-1.9-1.9A1.9,1.9,0,0,1,913.1,154.5Zm12,0a1.9,1.9,0,1,1-1.9-1.9A1.9,1.9,0,0,1,925.1,154.5Z" transform="translate(-904.4 -134.6)"></path></svg>
        <span class="cart-link__bubble">
          <span class="cart-link__bubble-num">{{ cart.item_count }}</span>
        </span>
      </span>
      <span class="site-nav__icon-label small--hide{% if hide_icon_labels %} icon__fallback-text{% endif %}">
        {{ 'layout.cart.title' | t }}
      </span>
    </a>


{%- comment -%}
    <button type="button"
      aria-controls="MobileNav"
      class="site-nav__link site-nav__link--icon btn btn--icon btn btn--icon medium-up--hide mobile-nav-trigger">
      <svg aria-hidden="true" focusable="false" role="presentation" class="icon icon-hamburger" viewBox="0 0 64 64"><path class="cls-1" d="M7 15h51">.</path><path class="cls-1" d="M7 32h43">.</path><path class="cls-1" d="M7 49h51">.</path></svg>
      <span class="icon__fallback-text">{{ 'general.drawers.navigation' | t }}</span>
    </button>
{%- endcomment -%}



    <div class="mega-menu-hamburger">
      <button type="button" aria-label="hamburger" class="btn-hamburger"><span></span> <span></span> <span></span></button>
    </div>
  </div>

  <div class="site-nav__close-cart">
    <button type="button" class="site-nav__link site-nav__link--icon js-close-header-cart">
      <span>{{ 'general.accessibility.close' | t }}</span>
      <svg aria-hidden="true" focusable="false" role="presentation" class="icon icon-close" viewBox="0 0 64 64"><defs><style>.cls-1{fill:none;stroke:#000;stroke-miterlimit:10;stroke-width:2px}</style></defs><path class="cls-1" d="M19 17.61l27.12 27.13m0-27.13L19 44.74"/></svg>
    </button>
  </div>
</div>
