    <script>
      //open modal
      const contactFormSh = document.querySelector('.contact-modal')
      const closeButtonContact = document.querySelector('.contact-modal .btn-close')
      const contactButtons = document.querySelectorAll('.js-contact')

      contactButtons.forEach((button) => {
        button.addEventListener('click', () => {
          contactFormSh.classList.add('active')
        })
      })

      closeButtonContact.addEventListener('click', () => {
        contactFormSh.classList.remove('active')
      })
    </script>