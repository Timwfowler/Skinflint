

    <div class="contact-modal">

      <div class="contact-modal-wrap">



      <div class="contact-modal__inner">
        <button type="button" aria-label="Close" class="btn-close"></button>    
        <div class="footer__contact">

            <div class="footer__subscribe rte rte--nomargin">
              <h3>Enquire about your project
              </h3>
            </div>

  
          {%- render 'contact-form-project', section_id: section.id, snippet_context: 'footer' -%}
  
