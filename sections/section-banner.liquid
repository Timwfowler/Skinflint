
<div class="notice-banner page-width">
  <div class="notice-banner__inner">
    {% for block in section.blocks %}
      <a class="notice-banner__slide" href=""><p>{{ block.settings.text }}</p></a>
    {% endfor %}    
  </div>
</div>

{% schema %}
{
  "name": "Notice Banner",
  "class": "notice-banner-section",
  "settings": [
  ],
  "blocks": [
    {
      "type": "icon",
      "name": "Icon block",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Paragraph"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Notice Banner"
    }
  ]
}
{% endschema %}