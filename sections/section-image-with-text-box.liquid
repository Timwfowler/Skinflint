<div class="image-with-text-box {% if section.settings.flush %}section-flush {% endif %}
    {% if section.settings.flush_bottom %}section-padding--bottom {% endif %}"><div class="image-with-text-box__inner page-width">
    <div class="image-with-text-box__image">
      <a href="{{ section.settings.link }}">
        <img src="{{ section.settings.image | img_url: 'master' }}" alt="{{ section.settings.image.alt }}">
      </a>
    </div>
    <div class="image-with-text-box__text-box">
      <div class="image-with-text-box__text-wrap">
        <a href="{{ section.settings.link }}">
          <h3>{{ section.settings.heading}}</h3>
        </a>
        {{ section.settings.copy}}
        <div class="image-with-text-box__link-wrap">
          <a href="{{ section.settings.link }}">{{ section.settings.link_text }}</a>
        </div>
      </div>
    </div>
  </div>
</div>


{% schema %}
  {
    "name": "Image with text box",
    "class": "index-section image-with-text-box",
    "settings": [
      {
        "type": "checkbox",
        "id": "flush",
        "label": "Remove top space",
        "default": false
      },
      {
        "type": "checkbox",
        "id": "flush_bottom",
        "label": "Add bottom space",
        "default": false
      },
      {
        "type": "header",
        "content": "Image"
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      }, {
        "type": "url",
        "id": "heading_link",
        "label": "Image and heading link"
      }, {
        "type": "header",
        "content": "Textbox"
      }, {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      }, {
        "type": "richtext",
        "id": "copy",
        "label": "Copy"
      }, {
        "type": "text",
        "id": "link_text",
        "label": "Link text"
      }, {
        "type": "url",
        "id": "link",
        "label": "Link"
      }
    ],
    "presets": [
      {
        "name": "Image with text box"
      }
    ]
  }
{% endschema %}