{% schema %}
  {
    "name": "Product metafield details",
    "class": "product-metafield-details index-section",
    "settings": [
      {
        "type": "checkbox",
        "id": "flush",
        "label": "Remove top space",
        "default": true
      }, {
        "type": "checkbox",
        "id": "flush_bottom",
        "label": "Add bottom space",
        "default": true
      }
    ],
    "blocks": [
      {
        "name": "Filter Info",
        "type": "filter",
        "settings": [
          {
            "type": "text",
            "id": "heading",
            "label": "Metafield Title",
            "info": "add a metafield title here (ie 1920s) and this section will only show if the product has the entered metafiled title"
          },
          {
            "type": "checkbox",
            "id": "flush_bottom",
            "label": "Add bottom space",
            "default": true
          },
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "text",
            "id": "title",
            "label": "Heading"
          }, {
            "type": "richtext",
            "id": "copy",
            "label": "Copy"
          }, {
            "type": "url",
            "id": "link",
            "label": "Link"
          }, {
            "type": "text",
            "id": "link_text",
            "label": "Link Text"
          }
        ]
      },
      {
        "name": "PDF Block",
        "type": "pdf",
        "limit": 1,
        "settings": [
        ]
      },
      {
        "name": "Metafield Blocks",
        "type": "meta",
        "limit": 1,
        "settings": [
        ]
      }
    ],
    "presets": [
      {
        "name": "Product metafield details"
      }
    ],
    "templates": ["product"]
  }
{% endschema %}