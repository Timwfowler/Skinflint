<div class="lifestyle-grid {% if section.settings.flush %}section-flush {% endif %}
{% if section.settings.flush_bottom %}section-padding--bottom {% endif %}">
  <div class="lifestyle-grid__inner {% unless section.settings.full_width %}page-width{% endunless %}">





    {% for block in section.blocks %}

      <div class="lifestyle-grid-item__image {% if block.settings.item_width %}  lifestyle-grid-item__image--50{% endif %}" 
        
      >

        {%- if block.settings.image != blank -%}


        <img src="{{ block.settings.image | img_url: 'master' }}" loading="lazy" alt="{{ block.settings.image.alt }}">
        {%- else -%}
          <div class="image-wrap">
            {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
          </div>
        {%- endif -%}




        
        <div class="lifestyle-grid-item__text-wrap {{ block.settings.text_align }}">

          {%- unless block.settings.top_subheading == blank -%}
          <div class="hero__top-subtitle">
            <div class="hero__animation-contents p" style="color: {{ block.settings.text_color }}">
              {{ block.settings.top_subheading | escape }}
            </div>
          </div>
          {%- endunless -%}
          {%- unless block.settings.title == blank -%}
            <div class="hero__title">
              <div class="hero__animation-contents {{ block.settings.heading_type }} " style="color: {{ block.settings.text_color }}">
              {{ block.settings.title | newline_to_br }}
              </div>
            </div>
          {%- endunless -%}
          {%- if block.settings.subheading or block.settings.link or block.settings.link_2 -%}
            {%- unless block.settings.subheading == blank -%}
              <div class="hero__subtitle">
                <div class="hero__animation-contents p" style="color: {{ block.settings.text_color }}" >
                  {{ block.settings.subheading }}
                </div>
              </div>
            {%- endunless -%}
            {%- if block.settings.link_text != blank or block.settings.link_text_2 != blank -%}
              <div class="hero__link">
                {%- if block.settings.link_text != blank -%}
                {% render 'button', text: block.settings.link_text, link: block.settings.link, style:  block.settings.button_style, icon:  block.settings.button_icon %}
  
              {%- endif -%}
                {%- if block.settings.link_text_2 != blank -%}
                {% render 'button', text: block.settings.link_text, link: block.settings.link, style:  block.settings.button_style_2, icon:  block.settings.button_icon_2 %}
                {%- endif -%}
              </div>
            {%- endif -%}
          {%- endif -%}
  
        </div>
   

      
      </div>
      
    {% endfor %}




  </div>


</div>




{% schema %}
{
  "name": "Lifestyle Grid",
  "class": "index-section lifestyle-grid-section",
  "max_blocks": 18,
  "settings": [
    {
      "type": "checkbox",
      "id": "flush",
      "label": "Remove top space",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "flush_bottom",
      "label": "Add bottom space",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "full_width",
      "label": "Show as full width?",
      "default": false
    }
  ],
  "blocks": [
    {
      "type": "collection",
      "name": "Grid Item",
      "settings": [
        {
          "type": "checkbox",
          "id": "item_width",
          "label": "50% width? (defualts to 100%)",
          "default": false
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "top_subheading",
          "label": "t:sections.slideshow.blocks.hero.settings.top_subheading.label"
        },
        {
          "type": "text",
          "id": "title",
          "label": "t:sections.slideshow.blocks.hero.settings.title.label"
        },
        {
          "type": "radio",
          "id": "heading_type",
          "label": "Heading Size",
          "options": [
            {
              "value": "h1",
              "label": "Heading One"
            },
            {
              "value": "h2",
              "label": "Heading Two"
            },
            {
              "value": "h3",
              "label": "Heading Three"
            },
            {
              "value": "h4",
              "label": "Heading Four"
            }
          ],
          "default": "h2"
        },
        {
          "type": "color",
          "id": "text_color",
          "label": "Text Colur",
          "default": "#fff"
        },
        {
          "type": "text",
          "id": "subheading",
          "label": "t:sections.slideshow.blocks.hero.settings.subheading.label",
          "default": "And optional subtext"
        },
        {
          "type": "url",
          "id": "link",
          "label": "t:sections.slideshow.blocks.hero.settings.link.label"
        },
        {
          "type": "text",
          "id": "link_text",
          "label": "t:sections.slideshow.blocks.hero.settings.link_text.label",
          "default": "Optional button"
        },
        {
          "type": "radio",
          "id": "button_style",
          "label": "Button Style",
          "options": [
            {
              "value": "primary",
              "label": "Primary"
            },
            {
              "value": "secondary",
              "label": "Secondary"
            },
            {
              "value": "underline",
              "label": "Underline"
            }
          ],
          "default": "primary"
        },
        {
          "type": "radio",
          "id": "button_icon",
          "label": "Include Button Icon",
          "options": [
            {
              "value": "false",
              "label": "False"
            },
            {
              "value": "true",
              "label": "True"
            }
          ],
          "default": "false"
        },
        {
          "type": "url",
          "id": "link_2",
          "label": "t:sections.slideshow.blocks.hero.settings.link_2.label"
        },
        {
          "type": "text",
          "id": "link_text_2",
          "label": "t:sections.slideshow.blocks.hero.settings.link_text_2.label"
        },
        {
          "type": "radio",
          "id": "button_style_2",
          "label": "Button Style",
          "options": [
            {
              "value": "primary",
              "label": "Primary"
            },
            {
              "value": "secondary",
              "label": "Secondary"
            },
            {
              "value": "underline",
              "label": "Underline"
            }
          ],
          "default": "primary"
        },
        {
          "type": "radio",
          "id": "button_icon_2",
          "label": "Include Button Icon",
          "options": [
            {
              "value": "false",
              "label": "False"
            },
            {
              "value": "true",
              "label": "True"
            }
          ],
          "default": "false"
        },
        {
          "type": "select",
          "id": "text_align",
          "label": "t:sections.slideshow.blocks.hero.settings.text_align.label",
          "default": "vertical-bottom horizontal-left",
          "options": [
            {
              "value": "vertical-center horizontal-left",
              "label": "t:sections.slideshow.blocks.hero.settings.text_align.options.vertical-center_horizontal-left.label"
            },
            {
              "value": "vertical-center horizontal-center",
              "label": "t:sections.slideshow.blocks.hero.settings.text_align.options.vertical-center_horizontal-center.label"
            },
            {
              "value": "vertical-center horizontal-right",
              "label": "t:sections.slideshow.blocks.hero.settings.text_align.options.vertical-center_horizontal-right.label"
            },
            {
              "value": "vertical-bottom horizontal-left",
              "label": "t:sections.slideshow.blocks.hero.settings.text_align.options.vertical-bottom_horizontal-left.label"
            },
            {
              "value": "vertical-bottom horizontal-center",
              "label": "t:sections.slideshow.blocks.hero.settings.text_align.options.vertical-bottom_horizontal-center.label"
            },
            {
              "value": "vertical-bottom horizontal-right",
              "label": "t:sections.slideshow.blocks.hero.settings.text_align.options.vertical-bottom_horizontal-right.label"
            },
            {
              "value": "vertical-top horizontal-left",
              "label": "Top Left"
            },
            {
              "value": "vertical-top horizontal-center",
              "label": "Top Center"
            },
            {
              "value": "vertical-top horizontal-right",
              "label": "Top Right"
            }
          ]
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Lifestyle Grid",
      "blocks": [
      ]
    }
  ]
}
{% endschema %}